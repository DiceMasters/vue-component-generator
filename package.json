{
  "name": "vue-component-generator",
  "publisher": "AlbertSaitov",
  "displayName": "Vue Component Generator",
  "description": "Генерируй компоненты Vue в классово верном формате",
  "version": "0.0.2",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/DiceMasters/vue-component-generator.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vue-component-generator.create",
        "title": "VCG: Generate"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "vue-component-generator.create"
        }
      ]
    },
    "configuration": {
      "title": "VCG",
      "properties": {
        "vcg.lang": {
          "type": "string",
          "default": "typescript",
          "enum": ["typescript", "javascript"],
          "description": "Язык"
        },
        "vcg.syntax": {
          "type": "string",
          "default": "composition",
          "enum": ["composition", "options", "vcc"],
          "enumDescriptions": ["Composition API", "Options API", "Vue Class Component"],
          "description": "Синтаксис компонентов"
        },
        "vcg.preprocessor": {
          "type": "string",
          "default": "scss",
          "enum": ["css", "scss", "sass", "less", "stylus"],
          "description": "Препроцессор CSS"
        },
        "vcg.prefix": {
          "type": "string",
          "default": "c",
          "description": "Префикс для CSS классов"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
